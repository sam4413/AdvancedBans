<UserControl x:Class="AdvancedBans.AdvancedBansControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdvancedBans"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000">

    <Grid>
        <TextBlock Text="Made By Sam" FontWeight="Bold" FontSize="14" Margin="0,25,0,0" Height="29" VerticalAlignment="Top" FontFamily="Bahnschrift"/>
        <TextBlock Text="AdvancedBans" FontWeight="Bold" FontSize="22" Margin="0,0,0,0" Height="29" VerticalAlignment="Top" FontFamily="Bahnschrift"/>
        <TabControl HorizontalAlignment="Left" Height="456" Margin="10,44,-10,0" VerticalAlignment="Top" Width="1000" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="General Configuration" TextBlock.FontFamily="Bahnschrift">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44*"/>
                        <RowDefinition Height="157*"/>
                        <RowDefinition Height="229*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="123*"/>
                        <ColumnDefinition Width="871*"/>
                    </Grid.ColumnDefinitions>


                    <TextBlock VerticalAlignment="Top" Margin="10,34,436,0" Height="182" Grid.Row="2" Grid.ColumnSpan="2" FontSize="14" FontFamily="Bahnschrift"><Run Foreground="Red" FontWeight="Bold" FontSize="14" Text="The ban hammer is in your hands. "/><LineBreak/><Run Text="Take control of your bans. Temp ban users, ban users with a reason, and more!"/><LineBreak/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="In-Game Commands"/><LineBreak/><Run Text="!ab help - Open the help menu for a full list of commands."/><LineBreak/><Run Text="!ab permban &lt;user&gt; &lt;reason&gt; - Permanently bans a user."/><LineBreak/><Run Text="!ab tempban &lt;user/ingame-name&gt; &lt;duration in days&gt; &lt;reason&gt; - Temp-ban a user "/><LineBreak/><Run Text="!ab unban &lt;case id&gt; - Unban a user."/><LineBreak/><Run Text="!ab alts &lt;user&gt; - Get the alts of a user."/><LineBreak/><Run/><LineBreak/><Run Text="Code is on Github: "/><Run Foreground="Blue" Text="https://github.com/sam4413/AdvancedBans"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="24" Grid.ColumnSpan="2" Height="32" Width="251"><Run FontWeight="Bold" Text="General Configuration"/></TextBlock>
                    <CheckBox Content="Enabled" HorizontalAlignment="Left" Margin="7,7,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="{Binding Enabled}" RenderTransformOrigin="-1.5,0.733" Height="20" Grid.Column="1" Width="62"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="8,32,0,0" TextWrapping="Wrap" Text="{Binding ScanningInt}" VerticalAlignment="Top" Width="120" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="Scanning Interval" HorizontalAlignment="Left" Margin="23,33,0,0" VerticalAlignment="Top" Height="18" Grid.Row="1" Width="97"/>
                    <TextBlock Text="Plugin Enabled" HorizontalAlignment="Left" Margin="24,6,0,0" VerticalAlignment="Top" Height="18" Grid.Row="1" Width="79"/>
                    <TextBlock Margin="790,213,0,-3" Grid.Row="2" Grid.Column="1" FontFamily="Bahnschrift"><Run FontWeight="Bold" FontSize="14" Text="Version 1.2.0"/></TextBlock>
                    <CheckBox Content="Debug Mode (Log Spam)" HorizontalAlignment="Left" Margin="7,60,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="{Binding Debug}" RenderTransformOrigin="-1.5,0.733" Height="20" Grid.Column="1" Checked="CheckBox_Checked_1" Width="153"/>
                    <TextBlock Text="Debugging" HorizontalAlignment="Left" Margin="24,55,0,0" VerticalAlignment="Top" Height="18" Grid.Row="1" Width="59"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="8,81,0,0" TextWrapping="Wrap" Text="{Binding BanDelay}" VerticalAlignment="Top" Width="120" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="Ban Delay" HorizontalAlignment="Left" Margin="23,82,0,0" VerticalAlignment="Top" Height="18" Grid.Row="1" Width="91"/>
                    <TextBlock HorizontalAlignment="Left" Margin="133,85,0,0" VerticalAlignment="Top" Height="34" Grid.Row="1" Width="436" Grid.Column="1"><Run Text="Waits for x time for the user to load in in ms, to then kick them and display the "/><LineBreak/><Run Text="ban message. If using a heavy amount of mods, set this value higher."/></TextBlock>
                    <TextBlock Text="ms" HorizontalAlignment="Left" Margin="133,33,0,0" VerticalAlignment="Top" Height="18" Grid.Row="1" Width="91" Grid.Column="1"/>
                    <CheckBox Content="Enable / Disable the collection and logging of IP addresses, and enforce bans by IP. Does not work for console/EOS servers." HorizontalAlignment="Left" Margin="7,155,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="{Binding LogIPs}" RenderTransformOrigin="-1.5,0.733" Height="20" Grid.Column="1" Checked="CheckBox_Checked_1" Width="692" Grid.RowSpan="2"/>
                    <TextBlock Text="Enforce IPs" HorizontalAlignment="Left" Margin="24,154,0,0" VerticalAlignment="Top" Height="17" Grid.Row="1" Width="78" RenderTransformOrigin="0.486,1.452" Grid.RowSpan="2"/>
                    <CheckBox Content="Enforce AdvancedBans to always keep connected to the Database at all times. The server will not start if it is not connected. &#xD;&#xA;Only disable this option if setting up the server. This setting should be enabled at all times on production servers." HorizontalAlignment="Left" Margin="7,121,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="{Binding ShutdownIfNotActive}" RenderTransformOrigin="-1.5,0.733" Height="34" Grid.Column="1" Checked="CheckBox_Checked_3" Width="683"/>
                    <TextBlock Text="Enforce Database" HorizontalAlignment="Left" Margin="24,120,0,0" VerticalAlignment="Top" Height="17" Grid.Row="1" Width="94"/>
                    <!---->

                </Grid>

            </TabItem>
            <TabItem Header="PostgreSQL Server" TextBlock.FontFamily="Bahnschrift">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="745*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="667,0,0,0" VerticalAlignment="Top" Height="428" Width="305" Grid.Column="1"><Run FontWeight="Bold" Text="Help:"/><LineBreak/><Run Text="You can define a new PostgreSQL server, or you can"/><LineBreak/><Run Text="reference a PostgreSQL server remotely. Please note, "/><LineBreak/><Run Text="you will need to have an external program run the "/><LineBreak/><Run Text="PostgreSQL server. "/><LineBreak/><LineBreak/><Run Text="It is recommended you have something like PgAdmin"/><LineBreak/><Run Text="installed so you can view the database easily, and make"/><LineBreak/><Run Text="changes if necessary."/><LineBreak/><Run/><LineBreak/><Run Text="If you are running the database locally, just keep the"/><LineBreak/><Run Text="values as is, and the plugin will make the database "/><LineBreak/><Run Text="for you."/><LineBreak/><Run/><LineBreak/><Run Text="If your running Nexus from multiple boxes, ensure the"/><LineBreak/><Run Text="PostgreSQL address points to your local / public address "/><LineBreak/><Run Text="where the Database is being hosted. Please note, port "/><LineBreak/><Run Text="forwarding the database is not recommended, and "/><LineBreak/><Run Text="putting a password on the database is a absolute must."/><LineBreak/><Run/><LineBreak/><Run Text="Please note that without a database connection,"/><LineBreak/><Run Text="Advancedbans cannot start due to security reasons."/><LineBreak/><Run Text="Please ensure the database is running at all times."/></TextBlock>

                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="24" Height="32" Width="251" Grid.ColumnSpan="2"><Run FontWeight="Bold" Text="PostgreSQL Server"/></TextBlock>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="108,65,0,0" TextWrapping="Wrap" Text="{Binding LocalAddress}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Address" HorizontalAlignment="Left" Margin="0,66,0,0" VerticalAlignment="Top" Height="18" Grid.Column="1"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="108,97,0,0" TextWrapping="Wrap" Text="{Binding Port}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Port" HorizontalAlignment="Left" Margin="0,98,0,0" VerticalAlignment="Top" Height="18" Grid.Column="1"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="108,130,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Username" HorizontalAlignment="Left" Margin="0,131,0,0" VerticalAlignment="Top" Height="18" Grid.Column="1"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="108,162,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Password" HorizontalAlignment="Left" Margin="0,163,0,0" VerticalAlignment="Top" Height="18" Grid.Column="1"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="108,195,0,0" TextWrapping="Wrap" Text="{Binding DatabaseName}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Database Name" HorizontalAlignment="Left" Margin="0,196,0,0" VerticalAlignment="Top" Height="18" Grid.Column="1"/>
                    <TextBlock Text="(Set to null to disable)" HorizontalAlignment="Left" Margin="233,163,0,0" VerticalAlignment="Top" Height="18" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Web Server" TextBlock.FontFamily="Bahnschrift">
                <Grid Background="#FFE5E5E5">
                    <TextBlock Text="Enable Webserver" HorizontalAlignment="Center" Margin="17,58,878,0" VerticalAlignment="Top" Height="18" Width="99"/>
                    <CheckBox Content="Webserver" HorizontalAlignment="Left" Margin="125,58,0,0" VerticalAlignment="Top" IsChecked="{Binding Enabled}" RenderTransformOrigin="-1.5,0.733" Height="20" Checked="CheckBox_Checked_2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="24" Height="32" Width="251"><Run FontWeight="Bold" Text="Web Server"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="125,83,0,0" TextWrapping="Wrap" Text="{Binding WebAddress}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Web Address" HorizontalAlignment="Left" Margin="17,84,0,0" VerticalAlignment="Top" Height="18"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="125,115,0,0" TextWrapping="Wrap" Text="{Binding WebPort}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Web Port" HorizontalAlignment="Left" Margin="17,116,0,0" VerticalAlignment="Top" Height="18"/>
                    <TextBox HorizontalAlignment="Left" Height="200" Margin="125,183,0,0" TextWrapping="Wrap" Text="{Binding WebBanPage}" AcceptsReturn="true" MinLines="5" VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Width="200"/>
                    <TextBlock Text="Ban Page (HTML)" HorizontalAlignment="Left" Margin="17,184,0,0" VerticalAlignment="Top" Height="18"/>
                    <TextBox HorizontalAlignment="Left" Height="200" Margin="450,183,0,0" TextWrapping="Wrap" Text="{Binding WebErrorPage}" AcceptsReturn="true" MinLines="5" VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Width="200"/>
                    <TextBlock Text="Error Page (HTML)" HorizontalAlignment="Left" Margin="342,184,0,0" VerticalAlignment="Top" Height="18"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="125,146,0,0" TextWrapping="Wrap" Text="{Binding WebPublicAddress}" VerticalAlignment="Top" Width="120"/>
                    <TextBlock Text="Server IP Address" HorizontalAlignment="Left" Margin="17,147,0,0" VerticalAlignment="Top" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="250,146,0,0" VerticalAlignment="Top" Height="37"><Run Text="Type your public IP address. If banned, this will be "/><LineBreak/><Run Text="used to redirect the user to a specified address."/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="667,0,0,0" VerticalAlignment="Top" Height="428" Width="327" Foreground="Black"><Run FontWeight="Bold" Text="Help:"/><LineBreak/><Run Text="You can start/stop a web server here as well as manage"/><LineBreak/><Run Text="the properties of it. The purpose of the web server is to "/><LineBreak/><Run Text="allow ban reasons to be displayed if the player was"/><LineBreak/><Run Text="banned / removed from the server."/><LineBreak/><Run/><LineBreak/><Run Text="The web server does not need to be on for banning to"/><LineBreak/><Run Text="work. Bans rely on the PostgreSQL database. Without the"/><LineBreak/><Run Text="database, the Plugin will not work."/><LineBreak/><Run/><LineBreak/><Run Text="Here, you can define the landing page for when a user is "/><LineBreak/><Run Text="banned. All HTML styling is supported. There are also "/><LineBreak/><Run Text="variable flags you can pass through to display the ban "/><LineBreak/><Run Text="reasoning."/><LineBreak/><Run/><LineBreak/><Run Text="Note: "/><Run Text="The Torch.Server must be ran as an "/><Run FontWeight="Bold" Text="ADMINISTRATOR"/><LineBreak/><Run Text="in order for the WebServer to run. Ensure the port is "/><LineBreak/><Run Text="forwarded as well. For Nexus servers, it is best to keep 1"/><LineBreak/><Run Text="server running the Webserver, and the rest to keep the "/><LineBreak/><Run Text="webserver off."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Available Flags:"/><LineBreak/><Run Text="{}{{SteamID"/><Run Text="}}   "/><Run Text="              {{IsPermanent}}   "/><LineBreak/><Run Text="{}{{CaseID}}                    {{IsExpired}}"/><LineBreak/><Run Text="{}{{BannedDate}}           {{Reason}} "/><LineBreak/><Run Text="{}{{ExpireDate}}              {{IPBanned}}"/><LineBreak/><Span/><Span/><Span/><LineBreak/><Run/></TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="Experimental" Margin="-2,0" TextBlock.FontFamily="Bahnschrift">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Center" Margin="17,58,878,0" VerticalAlignment="Top" Height="33" Width="99" FontFamily="Bahnschrift"><Run Text="Enable In-Game"/><LineBreak/><Run Text="Ban Button"/></TextBlock>
                    <CheckBox Content="In-game Ban Button" HorizontalAlignment="Left" Margin="125,58,0,0" VerticalAlignment="Top" IsChecked="{Binding AM_BanButton}" RenderTransformOrigin="-1.5,0.733" Height="20" Checked="CheckBox_Checked_2" TextBlock.FontFamily="Bahnschrift"/>

                    <CheckBox Content="Override" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="{Binding Override}" RenderTransformOrigin="-1.5,0.733" Height="20" Width="120" Checked="CheckBox_Checked_3" Margin="125,105,0,0" TextBlock.FontFamily="Bahnschrift"/>
                    <TextBlock HorizontalAlignment="Left" Margin="273,105,0,0" VerticalAlignment="Top" Height="44" Width="476" FontFamily="Bahnschrift"><Run Text="Overrides conflicting plugin commands with this plugin. If disabled, use the default prefix"/><LineBreak/><Run Text="!ab &lt;command&gt;. Enable if using Essentials plugin, disable if not. "/></TextBlock>


                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="24" Height="32" Width="267"><Run FontWeight="Bold" Text="Actions / Experimental"/></TextBlock>
                    <!--<TextBox HorizontalAlignment="Left" Height="23" Margin="125,228,0,0" TextWrapping="Wrap" Text="{Binding BanDelay}" VerticalAlignment="Top" Width="280"/>
                    <TextBlock Text="Sample text" HorizontalAlignment="Left" Margin="17,229,0,0" VerticalAlignment="Top" Height="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="450,53,0,0" VerticalAlignment="Top" Height="140" Width="231"><Run FontWeight="Bold" Text="Tip:"/><LineBreak/><Run Text="Any text with {{variable}} is a variable, "/><LineBreak/><Run Text="and will be replaced."/><LineBreak/><Run/><LineBreak/><Run Text="This part is not done yet, and will be "/><LineBreak/><Run Text="finished in a future version"/></TextBlock>-->
                    <TextBlock HorizontalAlignment="Left" Margin="279,58,0,0" VerticalAlignment="Top" Height="42" Width="727" FontFamily="Bahnschrift"><Run Text="Makes the ban button another form of kicking the player. "/><LineBreak/><Run Text="Does not actually ban the player, and forces admin to use plugin commands."/></TextBlock>
                    <TextBlock HorizontalAlignment="Center" Margin="282,10,10,0" VerticalAlignment="Top" Height="32" Width="702" Foreground="Red" FontFamily="Bahnschrift" FontSize="14"><Run FontWeight="Bold" Text="Collection of experimental / unstable configs. Use with caution, some may not work or "/><LineBreak/><Run FontWeight="Bold" Text="have bugs. You have been warned!"/></TextBlock>
                    <TextBlock HorizontalAlignment="Center" Margin="18,104,877,0" VerticalAlignment="Top" Height="33" Width="99" FontFamily="Bahnschrift"><Run Text="Override "/><LineBreak/><Run Text="conflicing"/></TextBlock>
                    <CheckBox Content="Experimental Patches" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="{Binding ExperimentalPatches}" RenderTransformOrigin="-1.5,0.733" Height="20" Width="143" Checked="CheckBox_Checked_3" Margin="125,156,0,0" TextBlock.FontFamily="Bahnschrift"/>
                    <TextBlock HorizontalAlignment="Left" Margin="273,156,0,0" VerticalAlignment="Top" Height="38" Width="476" FontFamily="Bahnschrift"><Run Text="Applies some experimental patches which detects and logs when a player joins at "/><LineBreak/><Run Text="certain times."/><LineBreak/><Run/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="18,155,0,0" VerticalAlignment="Top" Height="33" Width="99" FontFamily="Bahnschrift"><Run Text="Experimental"/><LineBreak/><Run Text="Patches"/></TextBlock>

                </Grid>
            </TabItem>
        </TabControl>
        <Button
            Content="Save Config"
            HorizontalAlignment="Left"
            Margin="935,47,-10,0"
            VerticalAlignment="Top"
            Width="75"
            Click="SaveButton_OnClick" TextBlock.FontFamily="Bahnschrift" />

